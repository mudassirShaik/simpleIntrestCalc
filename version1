<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" >
    <title id="Title1">
        Calculator
    </title>
    <script type="text/javascript">
        function calculate() {
            var p = 0;
            var y = 0;
            var i = 0;
            var si = 0;

            p = parseInt(document.getElementById("principal").value);
            y = parseInt(document.getElementById("years").value);
            i = parseInt(document.getElementById("intrest").value);
            si = (p*y*i)/100;
            var tot = p + si;
            document.getElementById("result").innerHTML = si;
            document.getElementById("total").innerHTML = tot;
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Simple Intrest Calculator
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form id="form1">
                    <div class="form-Group">
                        <label class="form-Group">Principal</label>
                        <input class="form-Ctrl" type="text" id="principal">                        
                    </div>
                    <div class="form-Group">
                        <label class="form-Group">Years</label>
                        <input class="form-Ctrl" type="text" id="years">                        
                    </div>
                    <div class="form-Group">
                        <label class="form-Group">Rate of Intrest</label>
                        <input class="form-Ctrl" type="text" id="intrest">
                    </div>
                    <button class="btn btn-primary" type="button" onclick="calculate()">Calculate</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h1 id="result">
                    $
                </h1>
            </div>
            <div class="form">
                <label class="form">Total amount</label>
                <h2 id="total"> $ </h2>
            </div>
        </div>
    </div>
</body>
